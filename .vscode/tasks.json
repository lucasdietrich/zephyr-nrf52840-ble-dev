{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "venvPath": "../.venv",
            "westPath": "../.venv/bin/west",
            "netToolsPath": "../tools/net-tools",
            "serialNumber": "683339521"
        }
    },
    "tasks": [
        {
            "label": "Build",
            "detail": "Build",
            "type": "shell",
            "command": "${westPath} build",
            "args": [

            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Flash",
            "detail": "Flash",
            "type": "shell",
            "command": "${westPath}",
            "args": [
                "-v",
                "flash",
                "-r",
                "nrfjprog",
                "--snr",
                "${serialNumber}",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
			"command": "rm -rf ${workspaceFolder}/build",
            "group": "build",
            "args": [
            ],
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "presentation": {
                "echo": false,
            },
            "problemMatcher": []
        },
        {
            "label": "Readelf",
            "type": "shell",
            "command": "arm-none-eabi-readelf -a ${workspaceFolder}/build/zephyr/zephyr.elf > readelf.txt",
            "presentation": {
                "echo": false,
            },
            "problemMatcher": []
        },
        {
            "label": "Disassembly",
            "type": "shell",
            "command": "arm-none-eabi-objdump -S ${workspaceFolder}/build/zephyr/zephyr.elf > disassembly.S",
            "presentation": {
                "echo": false,
            },
            "problemMatcher": []
        },
        {
            "label": "Activate Python venv",
            "type": "shell",
            "command": "source ${venvPath}/bin/activate && sh",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": false,
                "focus": true,
                "echo": true
            },
            "problemMatcher": []
        }
    ]
}