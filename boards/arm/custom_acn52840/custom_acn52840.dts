/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
    model = "Custom board with ACN52840 module";
	compatible = "nordic,nrf52840-dk-nrf52840";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_ble {
			gpios = <&gpio0 12 GPIO_ACTIVE_LOW>;
			label = "LED BLE";
		};
		led1: led_rx {
			gpios = <&gpio0 13 GPIO_ACTIVE_LOW>;
			label = "LED RX";
		};
		led2: led_tx {
			gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
			label = "LED TX";
		};
	};

    pwmleds {
        pwm_led0: pwm_led_ble {
			pwms = < &pwm0 12 >;
		};
        pwm_led1: pwm_led_rx {
            pwms = <&pwm0 13>;
        };
        pwm_led2: pwm_led_tx {
            pwms = <&pwm0 14>;
        };
    };

	buttons {
		compatible = "gpio-keys";
		button0: button {
			gpios = <&gpio0 17 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
            label = "Main user button";
		};
    };

    aliases {
        ipc-uart = &uart1;

        ble-led = &pwm_led0;
        ipc-rx-led = &pwm_led1;
        ipc-tx-led = &pwm_led2;
        user-button = &button0;

        counter = &timer3;

        /* if prefer rtc2 */
        counter-alt = &rtc2;
    };
};

/* debug uart: default config */
&uart0 {
	compatible = "nordic,nrf-uarte";
	status = "okay";
	current-speed = <115200>;
	tx-pin = <6>;
	rx-pin = <8>;
	rx-pull-up;
	// rts-pin = <5>;
	// cts-pin = <7>;
	// cts-pull-up;
};

/* ipc uart */
&uart1 {
	compatible = "nordic,nrf-uarte";
    status = "okay";
    current-speed = < 9600 >;
    rx-pin = < 27 >;
    rx-pull-up;
    tx-pin = < 26 >;
    parity = "none";
};

&pwm0
{
    status = "okay";
    
    ch0-pin = < 12 >;
    ch0-inverted;

    ch1-pin = < 13 >;
    ch1-inverted;

    ch2-pin = < 14 >;
    ch2-inverted;
};

&pwm1
{
    status = "disabled";
};

&pwm2
{
    status = "disabled";
};

&pwm3
{
    status = "okay";
    ch0-pin = < 0x10 >;
    ch0-inverted;
};